<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context=".Fragment.ProfileFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/employer_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/profile_icon"
        app:civ_border_color="@color/icon_dark_blue"
        app:civ_border_width="2dp" />

    <TextView

        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/employer_profile_image"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:text="First Name :"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/textView16"
        android:text="First Name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Last Name :"
        android:textColor="@color/icon_dark_blue"
        android:textSize="25sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/textView16"
        android:text="Last Name"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:text="Email: "
        android:textColor="@color/icon_dark_blue"
        android:textSize="25sp"
        android:textStyle="bold" />



        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignBaseline="@id/textView20"
            android:layout_marginEnd="10dp"
            android:textSize="22sp"
            android:textColor="@android:color/darker_gray"
            android:text="Email"
            android:id="@+id/EmailTextView"
            android:layout_toStartOf="@+id/textView20"
            android:textStyle="bold"


            />




    <Button
        android:id="@+id/editEmployerProfile"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EmailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Edit Profile"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/editEmployerProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="log out"

        />












</RelativeLayout>
